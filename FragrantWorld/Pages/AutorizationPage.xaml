<Page x:Class="FragrantWorld.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FragrantWorld.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizePage">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">
        <StackPanel>
            <TextBlock Text="Логин" FontFamily="Comic Sans MS" FontSize="16" HorizontalAlignment="Center"/>
            <TextBox x:Name="LoginTextBox" FontFamily="Comic Sans MS"/>
        </StackPanel>
        <StackPanel>
            <TextBlock Text="Пароль" FontFamily="Comic Sans MS" FontSize="16" HorizontalAlignment="Center"/>
            <PasswordBox x:Name="PasswordTextBox" FontFamily="Comic Sans MS"/>
        </StackPanel>
        <StackPanel Margin="5">
            <Button x:Name="AuthorizationButton" Content="Авторизироваться" Margin="5" FontFamily="Comic Sans MS" Click="AuthorizationButton_Click" Background="#FFCC6600" FontSize="16"/>
            <Button x:Name="GuestButton" Content="Войти как гость" Margin="5" FontFamily="Comic Sans MS" Click="GuestButton_Click" Background="#FFCC6603" FontSize="16"/>
        </StackPanel>
    </StackPanel>
</Page>
